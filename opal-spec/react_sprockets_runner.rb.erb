# This file is used by Opal::Server to basically load all spec files that
# can be found in the spec/ directory.

require 'opal'
require 'opal-rspec'

<% Dir.glob('opal-spec/**/*_spec.{rb,opal}').each do |s| %>
<% puts "adding spec #{s}" %>
require <%= s.sub(/^opal-spec\//, '').sub(/\.(rb|opal)$/, '').inspect %>
<% end %>

Opal::RSpec::Runner.autorun
